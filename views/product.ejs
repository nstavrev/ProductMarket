
<div class="container-fluid">
    <div class="content-wrapper" ng-if="product">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="product col-md-3 service-image-left">
                            <img id="item-display" ng-src="{{product.image[0].url}}" alt=""/>
                    </div>
                    <div class="container service1-items col-sm-2 col-md-2 pull-left">
                            <a ng-repeat="image in product.image track by $index" id="item-$index" class="service$index-item">
                                <img ng-src="{{image.url}}" alt=""/>
                            </a>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="product-title">{{product.name}}</div>
                    <div class="product-desc">
                        {{product.description}}
                    </div>
                    <div class="product-rating">
                        <i ng-repeat="star in product.stars" class="fa fa-star gold"></i>
                    </div>
                    <hr>
                    <div class="product-price">{{product.price}}</div>
                    <div class="product-stock">{{labels[locale].instock}}</div>
                    <hr>
                    <div class="btn-group cart">
                        <button type="button" ng-click="buy(product)" class="btn btn-success">
                            {{labels[locale].buy}}
                        </button>
                    </div>
                    <div class="btn-group">
                        <div ng-if="shoppingcart.items[product._id]" class="cart-img-holder">
                            <div class="cart-circle">{{shoppingcart.items[product._id].qty}}</div>
                            <img class="img-responsive" src="/images/shoppingcart.jpg"/>
                        </div>
                    </div>

                    <!--
                    <div class="btn-group wishlist">
                        <button type="button" class="btn btn-danger">
                            Add to wishlist
                        </button>
                    </div>
                    -->
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-12 product-info">
                <ul id="myTab" class="nav nav-tabs nav_tabs">

                    <li class="active"><a href="#service-one" data-toggle="tab">{{labels[locale].description}}</a></li>
                    <li><a href="#service-two" data-toggle="tab">{{labels[locale].productinfo}}</a></li>
                    <li><a href="#service-three" data-toggle="tab">{{labels[locale].reviews}}</a></li>

                </ul>
                <div id="myTabContent" class="tab-content">
                    <div ng-if="product.longDescription" class="tab-pane fade in active" id="service-one">

                        <section class="container product-info">
                            {{product.longDescription.title}}
                            <h3 ng-if="product.longDescription.features">{{product.name}} Features:</h3>
                            <li ng-repeat="feature in product.longDescription.features">
                                {{feature}}
                            </li>

                        </section>

                    </div>
                    <div class="tab-pane fade" id="service-two">

                        <section class="container">
                            {{product.info}}
                        </section>

                    </div>
                    <div class="tab-pane fade" id="service-three">
                        <p class="reviews">{{product.reviews}} {{labels[locale].reviews}}</p>
                    </div>
                </div>
                <hr>
            </div>
        </div>
    </div>
    <div ng-if="!product" class="content-wrapper">
       <h3> Sorry, but we don't have such product </h3><a href="#/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a>
    </div>
</div>