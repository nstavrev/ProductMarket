<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div ng-if="homePage" id="carousel-example-generic" class="carousel slide carousel-holder" data-ride="carousel">
				<carousel interval="myInterval">
					<slide ng-repeat="slide in slides" class="item" active="slide.active">
						<img ng-src="{{slide.image}}" style="margin:auto;">
						<div class="carousel-caption">
							<div>
								<h4>{{slide.title}}</h4>
								<p>{{slide.text}}</p>
							</div>
						</div>
					</slide>
				</carousel>				
			</div>
			<div ng-if="homePage" id="latest-producs-slider" class="carousel slide carousel-holder" data-ride="carousel">
				<carousel>
					<slide ng-repeat="products in productSlides" class="item" active="slide.active1">
						<div class="home-products" ng-repeat="product in products">
								<img ng-src="{{product.image[0].url}}" src="" class="img-responsive" alt="{{product.name}} Image" />
								<h2 class="product-name">{{product.name}}</h2>
								<div class="product-price">${{product.price}}</div>
								<div class="product-description"><p>{{product.description}}</p></div>
								<button class="btn-buy" ng-click="buy(product)">Buy</button>
						</div>
					</slide>
				</carousel>				
			</div>
		</div>
	</div>
    <div class="row">
        <div class="col-md-3">
            <div ng-if="!homePage" class="list-group">
                <a ng-repeat="category in categories" ng-href="#/category{{parentCategory}}/{{category.name}}" class="list-group-item">{{category.name}}</a>
            </div>
        </div>
        <div class="col-md-{{columnClass}}">
            <div class="progress_bar" ng-if="loading == true">
                <p>
                    <img src="/images/ajax-loader.gif"/>
                </p>
            </div>
            <div ng-show="loading == false && products.length > 0" class="row">
				<div class="col-md-12">
					<pagination
							total-items="totalItems"
							items-per-page="productsPerPage"
							ng-model="currentPage"
							max-size="5"
							class="pagination-sm pull-right"
							boundary-links="true"
							rotate="false"
							num-pages="numPages">
					</pagination>
				</div>
            </div>
            <div class="row" ng-if="loading == false && products.length > 0">

                <div ng-repeat="product in filteredProducts track by $index" class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img ng-src="{{product.image[0].url}}" alt="">
                        <div class="caption">
                            <h4 class="pull-right">${{product.price}}</h4>
                            <h4><a href="#product/{{product._id}}">{{product.name}}</a>
                            </h4>
                            <p>
                               {{product.description}}
                            </p>
                        </div>
                        <div class="ratings">
                            <div class="clearfix">
                                <div class="buy-section">
                                    <button class="btn-buy" ng-click="buy(product)">Buy</button>
                                    <div><span ng-repeat="star in product.stars" class="glyphicon glyphicon-star"></span></div>
                                </div>
                                <div ng-if="shoppingcart.items[product._id]" class="cart-img-holder">
                                    <div class="cart-circle">{{shoppingcart.items[product._id].qty}}</div>
                                    <img class="img-responsive" src="/images/shoppingcart.jpg"/>
                                </div>
                                <p class="pull-right reviews">{{product.reviews}} reviews</p>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" ng-if="products.length == 0">
                No products were found at this category
            </div>
            <div ng-show="loading == false && products.length > 0" class="row">
				<div class="col-md-12">
					<pagination
							total-items="totalItems"
							items-per-page="productsPerPage"
							ng-model="currentPage"
							max-size="5"
							class="pagination-sm pull-right"
							boundary-links="true"
							rotate="false"
							num-pages="numPages">
					</pagination>
				</div>
            </div>
        </div>

    </div>
</div>

<!-- /.container -->


