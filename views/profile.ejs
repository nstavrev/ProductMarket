<div ng-if="loading">
    <img src="/images/ajax-loader.gif" />
</div>
<div ng-if="!user && !loading">
    Sorry, but there is no user in your session. Please go to login and sign in again.
</div>
<div ng-if="user && !loading">
    <div class="container">
    	<div class="col-md-8">
    		<div class="col-md-4">
    			<img src="/images/avatar.jpg" class="img-responsive" alt="My Profile Picture">
    		</div>
    		<div class="col-md-8">
    			<div class="row">
    				<div class="col-md-6">{{labels[locale].username}}</div> 
					<div class="col-md-6">{{user.username}}</div>
    			</div>
    			<div class="row">
    				<div class="col-md-6">{{labels[locale].firstname}}</div> 
					<div class="col-md-6">{{user.firstname}}</div>
    			</div>
    			<div class="row">
    				<div class="col-md-6">{{labels[locale].lastname}}</div> 
					<div class="col-md-6">{{user.lastname}}</div>
    			</div>
    		</div>
    	</div>
    </div>
</div>