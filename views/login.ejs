
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <!-- begin login -->
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">{{labels[locale].signup}}</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">{{labels[locale].forgotpassword}}</a></div>
                    </div>

                    <div style="padding-top:30px" class="panel-body" >

                        <div ng-if="loginError" id="login-alert" class="alert alert-danger col-sm-12">
                            <p>{{loginError}}</p>
                            <span></span>
                        </div>

                        <form id="loginform" class="form-horizontal" role="form">

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input type="text" ng-model="userData.username" class="form-control" value="" placeholder="{{labels[locale].username}}">
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input type="password" ng-model="userData.password" class="form-control" placeholder="{{labels[locale].password}}">
                            </div>

                            <div style="margin-top:10px" class="form-group">

                                <div class="col-sm-12 controls">
                                    <button id="btn-login" ng-click="login()" class="btn btn-success">{{labels[locale].signin}}  </button>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                        {{labels[locale].donthaveaccount}}
                                        <a href="#/register">
                                            {{labels[locale].signuphere}}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end login -->

        </div>
    </div>
</div>

