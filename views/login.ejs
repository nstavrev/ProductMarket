<div class="container">
    <div class="form-skin">
        <button type="button" class="close" ng-click="cancel()"><span aria-hidden="true">&times;</span></button>
            <!-- begin login -->
            <div id="loginbox" class="single-form">
                <div class="form-header-holder">
                    <h1 class="form-header">{{labels[locale].signin}}</h1>
                    <div class="form-subinfo"><a href="#">{{labels[locale].forgotpassword}}</a></div>
                </div>
                <div class="form-content" >
                    <div ng-if="loginError" id="login-alert" class="alert alert-danger col-sm-12">
                        <p>{{loginError}}</p>
                        <span></span>
                    </div>

                    <form id="loginform" class="form-horizontal" role="form">

                        <label for="username" class="form-icon"><i class="glyphicon glyphicon-user"></i>
                        </label>
                        <input type="text" ng-model="userData.username" value="" placeholder="{{labels[locale].username}}" id="username" class="form-control">

                        <label for="password" class="form-icon"><i class="glyphicon glyphicon-lock"></i></label> 
                        <input type="password" ng-model="userData.password" class="form-control" placeholder="{{labels[locale].password}}" id="password">

                        <div class="form-group">
                            <div class="col-sm-12 controls">
                                <button id="btn-login" ng-click="login()" class="btn btn-form">{{labels[locale].signin}}  </button>
                            </div>
                        </div>


                        {{labels[locale].donthaveaccount}}
                        <a href="#/register">
                            {{labels[locale].signuphere}}
                        </a>
                    </form>
                </div>
            </div>
            <!-- end login -->

    </div>
</div>

