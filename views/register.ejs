
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <!-- begin register -->
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">{{labels[locale].signup}}</div>
                        <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#/login">{{labels[locale].signin}}</a></div>
                    </div>
                    <div class="panel-body" >
                        <form id="signupform" class="form-horizontal" role="form">

                            <div id="signupalert" ng-if="signupError" class="alert alert-danger">
                                <p>{{signupError}}</p>
                                <span></span>
                            </div>
                            <div class="form-group">
                                <label for="firstname" class="col-md-3 control-label">{{labels[locale].firstname}}</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" ng-model="user.firstname" placeholder="{{labels[locale].firstname}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastname" class="col-md-3 control-label">{{labels[locale].lastname}}</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" ng-model="user.lastname" placeholder="{{labels[locale].lastname}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-md-3 control-label">{{labels[locale].email}}</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" ng-model="user.username" placeholder="{{labels[locale].email}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">{{labels[locale].password}}</label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" ng-model="user.password" placeholder="{{labels[locale].password}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-3 col-md-9">
                                    <button id="btn-signup" ng-click="signup()" type="button" class="btn btn-info">
                                        <i class="icon-hand-right"></i> {{labels[locale].signup}}
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <!-- end register -->
        </div>
    </div>
</div>

